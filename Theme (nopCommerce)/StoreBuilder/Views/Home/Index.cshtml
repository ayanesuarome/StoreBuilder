@Html.Action("HomePageNews", "News")
@Html.Widget("home_page_before_poll")
@Html.Action("HomePagePolls", "Poll")
@Html.Widget("home_page_bottom")
<script type="text/javascript">
    $(document).ready(function() {
        //Backstretch Slideshow
        $(".slideshow").backstretch(
        [
            "@Url.Content(string.Format("~/Themes/{0}/Content/images/slider/slider-img1.jpg", currentThemeName))",
            "@Url.Content(string.Format("~/Themes/{0}/Content/images/slider/slider-img2.jpg", currentThemeName))",
            "@Url.Content(string.Format("~/Themes/{0}/Content/images/slider/slider-img3.jpg", currentThemeName))"
        ],
        {
            fade: 750,
            duration: 4000
        });
    });
</script>