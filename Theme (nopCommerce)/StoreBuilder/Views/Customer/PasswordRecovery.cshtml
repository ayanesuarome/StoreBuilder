@model PasswordRecoveryModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}
<section id="password-recovery">
    <div class="container">
        <h2 class="wow bounceIn page-title-h2" data-wow-delay="0.4s">@T("Account.PasswordRecovery")</h2>
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 wow fadeInUp" data-wow-delay="0.8s">
                <p class="small text-center">@T("Account.PasswordRecovery.Tooltip")</p>
                @using (Html.BeginForm())
                {
                    <div class="col-md-10 col-md-offset-1">
                        @if (!string.IsNullOrEmpty(Model.Result))
                        {
                            <div class="result">
                                @Model.Result
                            </div>
                        }
                        @Html.TextBoxFor(model => model.Email, new {@class = "form-control", placeholder = T("Account.PasswordRecovery.Email")})
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 padding-top-10">
                        <input type="submit" name="send-email" class="form-control" value="@T("Account.PasswordRecovery.RecoverButton")" />
                    </div>
                }
            </div>
        </div>
    </div>
</section>